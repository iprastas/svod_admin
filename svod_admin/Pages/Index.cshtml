@page "{Message?}"
@model IndexModel
@{
	ViewData["Title"] = "Авторизация";
}

<div class="container-xxl">
	<div class="text-center">
		<h1 class="display-4">Вход</h1>
	</div>
	<form method="post" class="row col-4 offset-4">
			<div class="form-outline mb-4">
				<label class="form-label" for="login">Логин</label>
				<input type="text" id="login" class="form-control" name="username"/>
			</div>
			<div class="form-outline mb-4">
				<label for="pwd" class="form-label col-5">Пароль</label>
				<input type="password" class="form-control" id="pwd" name="password">
			</div>
		<button type="submit" asp-page-handler="enter" class="btn btn-primary btn-block mb-4">Войти</button>
	</form>
	@if (!string.IsNullOrEmpty(@Model.Message))
    {
        <div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 11">
            <div class="toast text-white bg-danger border-0"
                 id="FormToast"
                 role="alert"
                 aria-live="assertive"
                 aria-atomic="true">

                <div class="d-flex">
                    <div class="toast-body">
                        @Model.Message
                    </div>
                    <button type="button"
                            class="btn-close btn-close-white me-2 m-auto"
                            data-bs-dismiss="toast"
                            aria-label="Close"></button>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts 
{
    <script>
        var toastElList = [].slice.call(document.querySelectorAll('#FormToast'));
        var toastList = toastElList.map(function (toastEl) {
            return new bootstrap.Toast(toastEl);
        });
        toastList.forEach(toast => toast.show());
    </script>
}