@page "{login}"
@model svod_admin.Pages.Target.TargetFinegrainedModel
@{
    ViewData["Title"] = "Формы МЖКХ";
}

<div class="container-fluid">
    <div class="row head">
        <div class="col-auto me-auto">
            <input class="form-control" id="search_inp" placeholder="Искать..." type="text" />
        </div>
        <div class="col-auto">
            <form method="post">
                <button type="submit" asp-page-handler="create" class="btn btn-success add-us">Добавить форму</button>
            </form>
        </div>
    </div>

    <div class="row table">
        <form method="post">
            <table class="table table-hover" id="tuser-tbl">
                <thead>
                    <tr>
                        <th scope="col">№</th>
                        <th scope="col">ID</th>
                        <th scope="col">название формы</th>
                        <th scope="col">логин</th>
                        <th scope="col">разрешения</th>
                        <th scope="col">username</th>
                        <th scope="col">дата</th>
                        <th scope="col">действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var us in Model.list)
                    {
                        <tr>
                            <td>@us.Num</td>
                            <td>@us.FormID</td>
                            <td>@us.FormName</td>
                            <td>@us.Login</td>
                            <td>
                                <select class="form-select" asp-for="@us.Permission" name="Permission" asp-items="Model.ListOfPermiss"></select>
                            </td>
                            <td>@us.Username</td>
                            <td>@us.ChangeDate</td>
                            <td>
                                <div class="d-flex gap-2 mb-2">
                                    <button type="button" class="btn btn-outline-success" id="SaveTargetFinegrained" onclick="saveTarF('@us.Login', @us.FormID, @us.Num)" title="Сохранить">
                                        <span>
                                            <img src="~/save.svg">
                                        </span>
                                    </button>
                                    <button type="submit" asp-page-handler="delete" asp-route-formid="@us.FormID" asp-route-login="@us.Login" class="btn btn-outline-danger actions" title="Удалить">
                                    <span>
                                        <img src="~/trash3.svg">
                                    </span>
                                </button>
					            </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </form>
    </div>
</div>

<div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 11"></div>

<script src="~/js/functions.js" type="text/javascript" asp-append-version="true"></script>